<script>
    function Check(checkbox) {
        var checkboxes = document.getElementsByName('department');

        checkboxes.forEach(function (cb) {
            if (cb !== checkbox) {
                cb.checked = false;
            }
        });
    }
    function checkGender(checkbox) {
        var checkboxes = document.getElementsByName('Gender');
        checkbox.setAttribute("asp-for", "helloButton");
        checkboxes.forEach(function (cbgen) {
            if (cbgen !== checkbox) {
                cbgen.checked = false;
            }
        });
    }
</script>